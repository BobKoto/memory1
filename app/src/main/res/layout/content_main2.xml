<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#78E0EC"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Main2Activity"

    tools:showIn="@layout/activity_main2">

    <!--  <Chronometer  -->
    <TextView
        android:id="@+id/roundTimer"
        android:layout_width="172dp"
        android:layout_height="53dp"

        android:layout_marginStart="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="17dp"
        android:background="#DD2C00"
        android:gravity="center"

        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/againButton"
        android:layout_width="149dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="8dp"
        android:text="@string/GoAgain"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="173dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="33dp"

        android:gravity="bottom|center"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/againButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roundTimer" />


    <TextView
        android:id="@+id/score"
        android:layout_width="136dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="17dp"

        android:background="#004D40"
        android:ems="10"
        android:focusable="auto"
        android:gravity="end"

        android:paddingStart="10sp"
        android:paddingEnd="0sp"

        android:textColor="#DD2C00"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/againButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/roundTimer"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- android:text="987"  -->
    <Button
        android:id="@+id/statsButton"
        android:layout_width="309dp"
        android:layout_height="65dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="32dp"
        android:text="@string/TapForStats"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frameLayout"/>
      <!--  app:layout_constraintVertical_bias="1.0" />  -->

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="321dp"
        android:layout_height="343dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3">

        <ImageView
            android:contentDescription="@string/tap"
            android:id="@+id/imageView0"
            android:layout_width="124dp"
            android:layout_height="107dp"
            android:layout_gravity="top|start"
            app:srcCompat="@drawable/blacksquare" />

        <ImageView
            android:contentDescription="@string/tap"
            android:id="@+id/imageView1"
            android:layout_width="127dp"
            android:layout_height="106dp"
            android:layout_gravity="top|end"
            app:srcCompat="@drawable/bluehalfmoon" />

        <ImageView
            android:contentDescription="@string/tap"
            android:id="@+id/imageView2"
            android:layout_width="122dp"
            android:layout_height="108dp"
            android:layout_gravity="center|start"
            app:srcCompat="@drawable/yellowsphere" />

        <ImageView
            android:contentDescription="@string/tap"
            android:id="@+id/imageView3"
            android:layout_width="130dp"
            android:layout_height="104dp"
            android:layout_gravity="center|end"
            app:srcCompat="@drawable/whitestar" />

        <ImageView
            android:contentDescription="@string/tap"
            android:id="@+id/imageView4"
            android:layout_width="130dp"
            android:layout_height="98dp"
            android:layout_gravity="bottom|start"
            app:srcCompat="@drawable/greendiamond" />

        <ImageView
            android:contentDescription="@string/tap"
            android:id="@+id/imageView5"
            android:layout_width="127dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom|end"
            app:srcCompat="@drawable/redtriangle" />
    </FrameLayout>
